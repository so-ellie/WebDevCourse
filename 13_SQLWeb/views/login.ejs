<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>

    <style>
      :root {
        --bg0: #0b0611;
        --bg1: #12051a;
        --card: #140a1f;
        --pink: #ff4fd8;
        --pink2: #ff86ea;
        --lilac: #b58cff;
        --lilac2: #d5b6ff;
        --text: #f7e9ff;
        --muted: rgba(247, 233, 255, 0.72);
        --shadow: 0 18px 60px rgba(0, 0, 0, 0.55);
        --radius: 18px;
      }
      * {
        box-sizing: border-box;
      }
      html,
      body {
        height: 100%;
      }
      body {
        margin: 0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto,
          Arial;
        color: var(--text);
        background: radial-gradient(
            1200px 800px at 10% 20%,
            rgba(255, 79, 216, 0.2),
            transparent 55%
          ),
          radial-gradient(
            900px 700px at 85% 30%,
            rgba(181, 140, 255, 0.18),
            transparent 60%
          ),
          linear-gradient(180deg, var(--bg0), var(--bg1));
        overflow-x: hidden;
        display: grid;
        place-items: center;
        padding: 28px 14px;
      }
      .blob {
        position: fixed;
        width: 520px;
        height: 520px;
        border-radius: 999px;
        filter: blur(40px);
        opacity: 0.55;
        pointer-events: none;
        animation: floaty 12s ease-in-out infinite;
        top: -160px;
        right: -220px;
        background: radial-gradient(
          circle at 40% 35%,
          rgba(181, 140, 255, 0.85),
          rgba(181, 140, 255, 0)
        );
      }
      .blob2 {
        position: fixed;
        width: 420px;
        height: 420px;
        border-radius: 999px;
        filter: blur(36px);
        opacity: 0.52;
        pointer-events: none;
        animation: floaty 13s ease-in-out infinite;
        bottom: -200px;
        left: -140px;
        background: radial-gradient(
          circle at 30% 30%,
          rgba(255, 79, 216, 0.85),
          rgba(255, 79, 216, 0)
        );
        animation-delay: -5s;
      }
      @keyframes floaty {
        0%,
        100% {
          transform: translate(0, 0) scale(1);
        }
        50% {
          transform: translate(16px, -22px) scale(1.03);
        }
      }

      .shell {
        width: min(680px, 94vw);
        padding: 1px;
        border-radius: var(--radius);
        background: conic-gradient(
          from 180deg,
          rgba(255, 79, 216, 0.9),
          rgba(181, 140, 255, 0.7),
          rgba(255, 134, 234, 0.8),
          rgba(255, 79, 216, 0.9)
        );
        box-shadow: var(--shadow);
        animation: appear 0.6s ease-out both;
      }
      @keyframes appear {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: none;
        }
      }

      .card {
        border-radius: calc(var(--radius) - 1px);
        padding: 26px 22px;
        background: linear-gradient(
          180deg,
          rgba(20, 10, 31, 0.92),
          rgba(16, 7, 26, 0.92)
        );
        border: 1px solid rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(10px);
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 8px;
      }
      .dot {
        width: 12px;
        height: 12px;
        border-radius: 999px;
        background: radial-gradient(
          circle at 30% 30%,
          var(--pink2),
          var(--pink)
        );
        box-shadow: 0 0 0 6px rgba(255, 79, 216, 0.12);
        animation: pulse 2.6s ease-in-out infinite;
      }
      @keyframes pulse {
        0%,
        100% {
          transform: scale(1);
          box-shadow: 0 0 0 6px rgba(255, 79, 216, 0.12);
        }
        50% {
          transform: scale(1.08);
          box-shadow: 0 0 0 10px rgba(181, 140, 255, 0.1);
        }
      }
      h2 {
        margin: 10px 0 6px;
        font-size: 26px;
      }
      .sub {
        margin: 0 0 16px;
        color: var(--muted);
        line-height: 1.4;
      }

      .error {
        margin: 10px 0 14px;
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid rgba(255, 79, 216, 0.3);
        background: rgba(255, 79, 216, 0.1);
        color: #ffe6fb;
        animation: shake 0.42s ease-in-out;
      }
      @keyframes shake {
        0%,
        100% {
          transform: translateX(0);
        }
        20% {
          transform: translateX(-6px);
        }
        40% {
          transform: translateX(6px);
        }
        60% {
          transform: translateX(-4px);
        }
        80% {
          transform: translateX(4px);
        }
      }

      .field {
        margin: 12px 0;
      }
      label {
        display: block;
        font-size: 12px;
        color: var(--muted);
        margin: 0 0 6px;
      }
      .control {
        position: relative;
      }
      input {
        width: 100%;
        padding: 12px 12px;
        border-radius: 14px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(0, 0, 0, 0.18);
        color: var(--text);
        outline: none;
        transition: border-color 0.18s ease, box-shadow 0.18s ease,
          background 0.18s ease;
      }
      input::placeholder {
        color: rgba(247, 233, 255, 0.48);
      }
      input:focus {
        border-color: rgba(255, 79, 216, 0.5);
        box-shadow: 0 0 0 6px rgba(255, 79, 216, 0.12);
        background: rgba(0, 0, 0, 0.22);
      }

      .toggle {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        border: 1px solid rgba(255, 255, 255, 0.12);
        background: rgba(255, 255, 255, 0.06);
        color: var(--text);
        padding: 6px 10px;
        border-radius: 999px;
        font-size: 12px;
        cursor: pointer;
        transition: transform 0.12s ease, background 0.18s ease;
      }
      .toggle:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-50%) scale(1.02);
      }

      .btn {
        width: 100%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 12px 14px;
        border: none;
        border-radius: 14px;
        cursor: pointer;
        color: #140a1f;
        font-weight: 700;
        letter-spacing: 0.2px;
        background: linear-gradient(135deg, var(--pink), var(--lilac));
        box-shadow: 0 14px 30px rgba(255, 79, 216, 0.2);
        transition: transform 0.12s ease, box-shadow 0.18s ease;
        position: relative;
        overflow: hidden;
      }
      .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 18px 40px rgba(181, 140, 255, 0.22);
      }
      .btn:active {
        transform: translateY(0);
      }

      .spinner {
        width: 16px;
        height: 16px;
        border-radius: 999px;
        border: 2px solid rgba(20, 10, 31, 0.3);
        border-top-color: rgba(20, 10, 31, 0.92);
        animation: spin 0.8s linear infinite;
      }
      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }

      .row {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        margin-top: 14px;
        border-top: 1px solid rgba(255, 255, 255, 0.08);
        padding-top: 14px;
        color: var(--muted);
        font-size: 12px;
      }
      a {
        color: rgba(255, 134, 234, 0.95);
        text-decoration: none;
      }
      a:hover {
        text-decoration: underline;
      }

      @media (prefers-reduced-motion: reduce) {
        * {
          animation: none !important;
          transition: none !important;
        }
      }
    </style>
  </head>

  <body>
    <div class="blob"></div>
    <div class="blob2"></div>

    <div class="shell">
      <div class="card">
        <div class="brand">
          <div class="dot"></div>
          <div>
            <div style="font-weight: 700; letter-spacing: 0.3px">
              Pink Lilac Auth
            </div>
            <div style="font-size: 12px; color: var(--muted)">
              Welcome back ✨
            </div>
          </div>
        </div>

        <h2>Login</h2>
        <p class="sub">Enter your email and password to continue.</p>

        <% if (error) { %>
        <div class="error"><%= error %></div>
        <% } %>

        <form id="loginForm" method="POST" action="/login" autocomplete="on">
          <div class="field">
            <label for="email">Email</label>
            <div class="control">
              <input
                id="email"
                name="email"
                placeholder="you@domain.com"
                type="email"
                required
              />
            </div>
          </div>

          <div class="field">
            <label for="password">Password</label>
            <div class="control">
              <input
                id="password"
                name="password"
                placeholder="••••••••"
                type="password"
                required
              />
              <button
                class="toggle"
                type="button"
                id="togglePw"
                aria-label="Toggle password visibility"
              >
                Show
              </button>
            </div>
          </div>

          <button class="btn" type="submit" id="submitBtn">
            <span id="btnText">Login</span>
            <span id="btnSpin" class="spinner" style="display: none"></span>
          </button>
        </form>

        <div class="row">
          <span>No account yet?</span>
          <a href="/register">Create one →</a>
        </div>
      </div>
    </div>

    <script>
      (function () {
        const pw = document.getElementById("password");
        const tgl = document.getElementById("togglePw");
        const form = document.getElementById("loginForm");
        const btn = document.getElementById("submitBtn");
        const txt = document.getElementById("btnText");
        const spn = document.getElementById("btnSpin");

        tgl.addEventListener("click", () => {
          const isHidden = pw.type === "password";
          pw.type = isHidden ? "text" : "password";
          tgl.textContent = isHidden ? "Hide" : "Show";
        });

        form.addEventListener("submit", () => {
          btn.disabled = true;
          btn.style.opacity = "0.92";
          txt.textContent = "Logging in…";
          spn.style.display = "inline-block";
        });
      })();
    </script>
  </body>
</html>
